<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text=" Result in rupees!"
                android:textColor="#FF1616"
                android:textSize="25sp"
                android:textStyle="bold" />


            <ImageView
                android:layout_width="120dp"
                android:layout_height="125dp"
                android:layout_gravity="center"
                android:src="@drawable/hlogo"

                />


            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="60dp"

                android:layout_marginTop="25dp"
                android:orientation="horizontal"
                android:padding="10dp">

                <EditText
                    android:id="@+id/num1"
                    android:layout_width="148dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/boxdesign"
                    android:ems="10"
                    android:hint="enter gram"
                    android:inputType="number"
                    android:paddingLeft="10dp"
                    android:textColor="#000"


                    />

                <EditText

                    android:id="@+id/num12"
                    android:layout_width="148dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/boxdesign"
                    android:ems="10"
                    android:hint="enter price in kg"
                    android:inputType="number"
                    android:paddingLeft="10dp"
                    android:textColor="#000"


                    />

            </LinearLayout>

            <TextView
                android:id="@+id/result"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/boxdesign"
                android:drawableLeft="@drawable/ic_baseline_currency_rupee_24"
                android:hint="result"
                android:paddingLeft="150dp"
                android:paddingTop="10dp"
                android:textColor="#000"
                android:textSize="20sp" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:padding="10dp">


                <Button

                    android:id="@+id/btnmoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:onClick="money"
                    android:text="enter"

                    />


                <Button
                    android:id="@+id/reset"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:text="Reset" />

            </LinearLayout>


            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="240dp"
                android:orientation="horizontal"
                android:padding="10dp">


                <ImageButton
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/circularbtn"
                    android:onClick="Gram"
                    android:src="@drawable/ic_baseline_balance_24" />


                <ImageButton
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/circularbtn"
                    android:onClick="Calculator"
                    android:src="@drawable/ic_baseline_calculate_24"
                    android:textAllCaps="false" />


            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="By aakid"
                android:textColor="#A5A2A2"
                android:textSize="14sp"
                android:textStyle="bold" />


        </LinearLayout>


    </ScrollView>

</RelativeLayout>